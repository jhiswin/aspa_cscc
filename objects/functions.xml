    <method name="fix" type="DINT">
        <arg type="DFLOAT" />
        <!-- floor(abs(arg)) * arg > 0 ? 1 : -1 -->
        <ast name="ASTERISK">
            <ast name="METHOD_CALL" text="floor">
                <ast name="ARGLIST_VALUES">
                    <ast name="METHOD_CALL" text="abs">
                        <ast name="ARGLIST_VALUES">
                            <arg index="1" />
                        </ast>
                    </ast>
                </ast>
            </ast>
            <ast name="CONDITIONAL">
                <ast name="GT">
                    <arg index="1" />
                    <ast name="DINT" text="0" />
                </ast>
                <ast name="DINT" text="1" />
                <ast name="DINT" text="-1" />
            </ast>
        </ast>
    </method>

